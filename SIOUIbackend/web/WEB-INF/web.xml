<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Profil</servlet-name>
        <servlet-class>controller.Profil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Album</servlet-name>
        <servlet-class>controller.Album</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/profil/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/profil/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/profil/success</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Album</servlet-name>
        <url-pattern>/album</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <context-param> 
        <description>Location to store uploaded file</description> 
        <param-name>file-upload</param-name> 
        <param-value>
            c:\data-upload
        </param-value> 
    </context-param>
</web-app>
